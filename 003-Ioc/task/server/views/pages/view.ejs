<%- include("../layouts/bookStart", {title: title})%> <%-
include("../layouts/menu")%>
<h1><%= book.title %></h1>

<div class="row">
  <div class="col-sm-8">
    <div class="card">
      <div class="card-body">
        <h5 class="card-title"><%= book.title %></h5>
        <img
          alt="Обложка"
          src="<%= book.fileCover ? `/public/covers/` + book.fileCover
          : `/public/covers/default_image.png` %>"
          style="width: 200px"
        />
        <p class="card-text">Просмотров: <%= count %></p>
        <p class="card-text"><%= book.description %></p>
        <p class="card-text"><%= book.authors %></p>
        <p class="card-text"><%= book.fileName %></p>

        <div class="text-right">
          <a class="btn btn-sm btn-primary" href="/update/<%= book.id %>">
            <i class="fa fa-pencil" aria-hidden="true"></i>
          </a>
          <form action="/update/<%= book.id %>" method="POST" class="d-inline">
            <button class="btn btn-sm btn-danger">
              <i class="fa fa-trash" aria-hidden="true"></i>
            </button>
          </form>
          <a class="btn btn-sm btn-primary" href="/download/<%= book.id %>">
            <i class="fa fa-save" aria-hidden="true"></i>
          </a>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-sm-8">
    <div id="list" class="list-group"></div>
  </div>
</div>

<div class="row">
  <div class="col-4">
    <div class="form-group">
      <label for="comment">comment</label>
      <textarea placeholder="leave a comment" class="form-control" id="comment"></textarea>
    </div>
    <button type="submit" id="send-comment" class="btn btn-primary">
      Отправить
    </button>
  </div>
</div>
</div>

<script src="/client/index.js" type="module"></script>
<div>

<%- include("../layouts/end")%>

    <label for="inputLogin">Логин</label>
    <input type="text" name="login" class="form-control" id="inputLogin" />
    <label for="inputPassword">Пароль</label>
    <input
      type="text"
      name="password"
      class="form-control"
      id="inputPassword"
    />
